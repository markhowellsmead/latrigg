{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "cover-page-header",
	"title": "Page Header",
	"blockTypes": ["core/cover"],
	"styles": {
		"blocks": {
			"core/heading": {
				"typography": {
					"fontSize": "var:preset|font-size|slammer",
					"fontStyle": "normal",
					"fontWeight": "900",
					"lineHeight": "1"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var:preset|font-size|slammer",
					"fontStyle": "normal",
					"fontWeight": "900",
					"lineHeight": "1"
				}
			}
		},
		"color": {
			"text": "var(--wp--preset--color--white)",
			"background": "linear-gradient(180deg,rgba(0, 0, 0, 0.5) 0%,rgba(0, 0, 0, 0) 30%,rgba(0, 0, 0, 0) 60%,rgb(0, 0, 0) 100%)",
			"gradient": "linear-gradient(180deg,rgba(0, 0, 0, 0.5) 0%,rgba(0, 0, 0, 0) 30%,rgba(0, 0, 0, 0) 60%,rgb(0, 0, 0) 100%)"
		},
		"dimensions": {
			"minHeight": "40vh"
		},
		"border": {
			"radius": {
				"bottomLeft": "0",
				"bottomRight": "0",
				"topLeft": "0",
				"topRight": "0"
			}
		},
		"spacing": {
			"padding": {
				"top": "var(--wp--preset--spacing--large)",
				"right": "var(--wp--preset--spacing--regular)",
				"bottom": "var(--wp--preset--spacing--large)",
				"left": "var(--wp--preset--spacing--regular)"
			}
		}
	}
}

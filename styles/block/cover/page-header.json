{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "cover-page-header",
	"title": "Page Header",
	"blockTypes": ["core/cover"],
	"styles": {
		"blocks": {
			"core/button": {
				"typography": {
					"fontSize": "var:preset|font-size|smaller"
				}
			},
			"core/buttons": {
				"typography": {
					"fontSize": "var:preset|font-size|smaller"
				}
			},
			"core/heading": {
				"typography": {
					"fontSize": "var:preset|font-size|slammer",
					"fontStyle": "normal",
					"lineHeight": "1"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var:preset|font-size|slammer",
					"fontStyle": "normal",
					"lineHeight": "1"
				}
			}
		},
		"color": {
			"text": "var(--wp--preset--color--white)",
			"gradient": "var(--wp--preset--gradient--shadow-top-and-bottom)"
		},
		"dimensions": {
			"minHeight": "75vh"
		},
		"border": {
			"radius": {
				"bottomLeft": "0",
				"bottomRight": "0",
				"topLeft": "0",
				"topRight": "0"
			}
		},
		"spacing": {
			"padding": {
				"top": "var(--wp--preset--spacing--xlarge)",
				"right": "var(--wp--preset--spacing--regular)",
				"bottom": "var(--wp--preset--spacing--xlarge)",
				"left": "var(--wp--preset--spacing--medium)"
			}
		}
	}
}

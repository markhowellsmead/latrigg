{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "infobox-medium",
	"title": "Infobox medium",
	"blockTypes": ["core/group"],
	"styles": {
		"border": {
			"style": "solid",
			"width": "1px",
			"color": "var:preset|color|xlight-primary"
		},
		"color": {
			"background": "var:preset|color|xlight-primary"
		},
		"spacing": {
			"padding": {
				"top": "var:preset|spacing|medium",
				"bottom": "var:preset|spacing|medium",
				"left": "var:preset|spacing|medium",
				"right": "var:preset|spacing|medium"
			}
		},
		"typography": {
			"fontStyle": "italic"
		}
	}
}
